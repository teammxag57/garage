generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model ShopSession {
  shop        String   @id
  accessToken String
  scopes      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model OAuthState {
  state     String   @id
  shop      String
  createdAt DateTime @default(now())
}
